<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Update Player</a></li>
</ol>

<br/>
<%- partial ('partials/statusmessage.ejs') %>

<h2>Update Player</h2>

<table class="table table-striped table-bordered">
  <tr>
    <th>ID</th>
    <th>Player Name</th>
    <th>Position</th>
    <th>NFL Team</th>
    <th>Fantasy Owner</th>
    <th>2015 Total Points</th>
    <th>Flex Eligible</th>
    <th>Active</th>
  </tr>
  <% if(typeof fantasyplayers != "undefined" && fantasyplayers.length > 0){ %>
    <% fantasyplayers.forEach(function(fantasyplayer){ %>
      <tr>
        <td><%= fantasyplayer.id %></td>
        <td><%= fantasyplayer.playerName %></td>
        <td><%= fantasyplayer.position %></td>
        <td><%= fantasyplayer.nflTeam %></td>
        <td><%= fantasyplayer.fantasyOwner %></td>
        <td><%= fantasyplayer.total2015Points %></td>
        <td><%= fantasyplayer.flexEligible %></td>
        <td><%= fantasyplayer.active %></td>
      </tr>
    <% }) %>
  <% }else{ %>
      <tr>
        <td colspan="8">0 records found</td>
      </tr>
  <% } %>
  
</table>

<form action="/update" method="POST" class="form-horizontal">
  <div class="form-group">
    <label for="playerID" class="col-sm-2 control-label">Player ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="playerID" name="id" placeholder="ID# of the player to update">
    </div>
  </div>
  <div class="form-group">
    <label for="playerName" class="col-sm-2 control-label">Player Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="playerName" name="playerName" placeholder="Player Name">
    </div>
  </div>
  <div class="form-group">
    <label for="position" class="col-sm-2 control-label">Position</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="position" name="position"  placeholder="QB, RB, WR, TE, K, or DEF">
    </div>
  </div>
  <div class="form-group">
    <label for="nflTeam" class="col-sm-2 control-label">NFL Team</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="nflTeam" name="nflTeam" placeholder="Baltimore Ravens">
    </div>
  </div>
  <div class="form-group">
    <label for="fantasyOwner" class="col-sm-2 control-label">Fantasy Owner</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="fantasyOwner" name="fantasyOwner" placeholder="Fantasy Team">
    </div>
  </div>
  <div class="form-group">
    <label for="total2015Points" class="col-sm-2 control-label">2015 Total Points</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="total2015Points" name="total2015Points" placeholder="209.56">
    </div>
  </div>
  <div class="form-group">
    <label for="flexEligible" class="col-sm-2 control-label">Flex Eligible</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="flexEligible" name="flexEligible" placeholder="true or false">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="radio">
        <label>
          <input type="radio" name="active" id="active1" value="1" checked>
          Active
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="active" id="active2" value="0">
          Inactive
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Update Player</button>
    </div>
  </div>
</form>