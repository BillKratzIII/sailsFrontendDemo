<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Delete Player</a></li>
</ol>

<br/>
<%- partial ('partials/statusmessage.ejs') %>

<h2>Delete Player</h2>

<table class="table table-striped table-bordered">
  <tr>
    <th>ID</th>
    <th>Player Name</th>
    <th>Position</th>
    <th>NFL Team</th>
    <th>Fantasy Owner</th>
    <th>2015 Total Points</th>
    <th>Flex Eligible</th>
    <th>Active</th>
  </tr>
  <% if(typeof fantasyplayers != "undefined" && fantasyplayers.length > 0){ %>
    <% fantasyplayers.forEach(function(fantasyplayer){ %>
      <tr>
        <td><%= fantasyplayer.id %></td>
        <td><%= fantasyplayer.playerName %></td>
        <td><%= fantasyplayer.position %></td>
        <td><%= fantasyplayer.nflTeam %></td>
        <td><%= fantasyplayer.fantasyOwner %></td>
        <td><%= fantasyplayer.total2015Points %></td>
        <td><%= fantasyplayer.flexEligible %></td>
        <td><%= fantasyplayer.active %></td>
      </tr>
    <% }) %>
  <% }else{ %>
      <tr>
        <td colspan="8">0 records found</td>
      </tr>
  <% } %>
  
</table>




<form action="/delete" method="POST" class="form-horizontal">
  <div class="form-group">
    <label for="playerID" class="col-sm-2 control-label">Player ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="playerID" name="id" placeholder="ID# of player to delete">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Delete Player</button>
    </div>
  </div>
</form>